<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroubd"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/backgroubd"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            />
    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="right"
        android:src="@mipmap/message"
        />
    </android.support.v7.widget.Toolbar>

    

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_117"
            android:background="@mipmap/my_account_bg_default"
            >
            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:id="@+id/iv_head"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_qianming"
                android:text="厉害了我的哥"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@id/iv_head"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="@dimen/dp_21"
                android:textColor="#bbb"
                android:layout_marginLeft="@dimen/dp_15"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asllyabear"
                android:textColor="#fff"
                android:textSize="@dimen/sp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@id/iv_head"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/tv_name"
                />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/big_arrow_right"
                android:layout_marginRight="@dimen/dp_17"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_145"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/bg_number_default"
            android:layout_marginTop="@dimen/dp_15"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的米粒"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="#f1f1f1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_75"
                android:layout_centerInParent="true"
                android:text="875"
                android:textColor="#fff"
                android:id="@+id/tv_num"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_num"
                android:textSize="@dimen/sp_15"
                android:textColor="#fff"
                android:text="米粒"
                android:layout_alignBottom="@id/tv_num"
                android:layout_marginBottom="@dimen/dp_18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情>>"
                android:textSize="@dimen/sp_18"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="#f1f1f1"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="@dimen/dp_340"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_32"
            >
            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_80">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#fff"
                    android:text="我的问答"
                    android:id="@+id/tv_question"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/my_question_disabled"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:src="@mipmap/rectangular_dividing_line_disabled"
                    android:layout_below="@id/tv_question"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#4d4d4d"
                />

            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_80">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#fff"
                    android:text="我的收藏"
                    android:id="@+id/tv_collect"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/collection_icons"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:src="@mipmap/rectangular_dividing_line_disabled"
                    android:layout_below="@id/tv_collect"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_340"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"

            >
            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_80">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#fff"
                    android:text="已购旅程"
                    android:id="@+id/tv_traval"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/buy_journey_icons"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:src="@mipmap/rectangular_dividing_line_disabled"
                    android:layout_below="@id/tv_traval"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    />


            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#4d4d4d"
                />

            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_80">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#fff"
                    android:text="联系客服"
                    android:id="@+id/tv_with"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/service_icons"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:src="@mipmap/rectangular_dividing_line_disabled"
                    android:layout_below="@id/tv_with"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    />


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/dp_340"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"

            >
            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_80">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#fff"
                    android:text="检测最新版本"
                    android:id="@+id/tv_new"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/new_edition_icons"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:src="@mipmap/rectangular_dividing_line_disabled"
                    android:layout_below="@id/tv_new"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#4d4d4d"
                />

            <RelativeLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_80">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="#fff"
                    android:text="赞扬/吐槽"
                    android:id="@+id/tv_about"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/comment_icons"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_3"
                    android:src="@mipmap/rectangular_dividing_line_disabled"
                    android:layout_below="@id/tv_about"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    android:layout_alignParentBottom="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#4d4d4d"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
