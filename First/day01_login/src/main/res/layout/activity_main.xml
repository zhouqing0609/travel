<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhangshaohang.ui.main.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/login_ll"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/dp_201"
            android:layout_height="@dimen/dp_22"
            android:text="你好，为了获取更好的服务"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_73"
            android:textColor="#FFFA6A13"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="@dimen/dp_198"
            android:layout_height="@dimen/dp_38"
            android:text="请登录到处旅行"
            android:textColor="#FF373737"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_23"
            android:textSize="@dimen/dp_27"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_80">

            <EditText
                android:id="@+id/phone"
                android:layout_width="@dimen/dp_329"
                android:inputType="number"
                android:theme="@style/MyEditText"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingEnd="@dimen/dp_97"
                android:hint="请输入手机号码"
                android:maxLength="11"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="@dimen/dp_100"
                android:paddingLeft="@dimen/dp_100"
                android:paddingRight="@dimen/dp_97" />

            <ImageView
                android:id="@+id/title_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"
                android:layout_alignLeft="@id/phone"/>

            <TextView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_20"
                android:text="+86"
                android:textColor="#FF636363"
                android:textSize="@dimen/dp_14"
                android:id="@+id/chs"
                android:layout_toRightOf="@id/title_img"
                android:layout_marginTop="@dimen/dp_5"/>

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_5"
                android:src="@mipmap/select"
                android:layout_toRightOf="@id/chs"
                android:layout_marginTop="@dimen/dp_13"/>

            <Button
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/button_unavailable"
                android:text="发送验证码"
                android:id="@+id/send_verify"
                android:textColor="#fff"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_22"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/or"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_20"
            android:text="or"
            android:textColor="#FFA9A9A9"
            android:textSize="@dimen/dp_14"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"/>

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@mipmap/wechat"
            android:src="@drawable/umeng_socialize_qq"
            android:id="@+id/wechat"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="@dimen/dp_51"
            android:layout_height="@dimen/dp_17"
            android:text="QQ登录"
            android:textColor="#FF4DAE46"
            android:id="@+id/tv_wechat"
            android:textSize="@dimen/dp_12"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:text="登录或注册即同意伴米旅行"
                android:textColor="#FF999999"
                android:textSize="@dimen/dp_13"
                />

            <TextView
                android:layout_gravity="bottom"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_18"
                android:text="用户协议"
                android:textColor="#FF000000"
                android:textSize="@dimen/dp_13"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/verify_ll"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_20">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/back_white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:gravity="right"
                android:text="重新发送(60s)"
                android:paddingRight="@dimen/dp_15"
                android:layout_gravity="right|center_vertical"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_44"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_38"
            android:text="请输入验证码"
            android:layout_marginLeft="@dimen/dp_23"
            android:textColor="#FF373737"
            android:textSize="@dimen/dp_27"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_83"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et1"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:gravity="center"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:inputType="number"
                android:maxLines="1"
                android:background="#f1f1f1"/>

            <EditText
                android:id="@+id/et2"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#f1f1f1"/>

            <EditText
                android:id="@+id/et3"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#f1f1f1"/>

            <EditText
                android:id="@+id/et4"
                android:layout_width="@dimen/dp_44"
                android:layout_height="match_parent"
                android:textColor="#636363"
                android:textSize="@dimen/dp_32"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="#f1f1f1"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
