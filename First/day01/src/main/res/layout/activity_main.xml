<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <android.support.v7.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_40"
      android:background="@color/backgroubd"
      >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="个人信息"
          android:textSize="20sp"
          android:textColor="#fff"
          android:layout_gravity="center_horizontal"
          />
      
  </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_82"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/seleted"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:text="头像"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="#fff"
            />
        <ImageView
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_71"
             android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_44"
            android:src="@mipmap/ic_launcher_round"
            />
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/seleted"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            android:text="昵称"
            android:layout_marginTop="19sp"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Asyll"
            android:textColor="#999"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_34"
            />
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/big_arrow_right"
          android:layout_marginRight="@dimen/dp_17"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/seleted"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            android:text="性别"
            android:layout_marginTop="19sp"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="男"
            android:textColor="#999"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_34"
            />
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"/>
    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/seleted"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            android:text="个人简介"
            android:layout_marginTop="19sp"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Salud"
            android:textColor="#999"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_34"
            />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/seleted"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            android:text="修改密码"
            android:layout_marginTop="19sp"
            android:layout_marginLeft="@dimen/dp_16"
            />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/big_arrow_right"
            android:layout_marginRight="@dimen/dp_17"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/seleted"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="#fa6a13"
            android:text="退出登录"
            android:layout_marginTop="18sp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</LinearLayout>