<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_20"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dongjing"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="东京"
            android:textColor="@color/block"
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:id="@+id/yinzuo"
            android:layout_below="@id/dongjing"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_37"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="银座"
            android:textSize="@dimen/sp_26"
            />
        <com.scwang.smartrefresh.header.material.CircleImageView
            android:background="@color/orgin"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            />

        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_21"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_253"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginRight="21dp"
            android:gravity="center"
            android:text="30.00"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:id="@+id/sail"
            android:text="六小时疯狂买买买攻略"
            android:layout_below="@id/yinzuo"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/block"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_25" />

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_below="@id/sail"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_297" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

